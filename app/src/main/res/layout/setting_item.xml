<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:paddingLeft="5dp">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/settingitemLinearLayout1"
		android:layout_centerVertical="true"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="vertical"
		android:layout_toRightOf="@id/settingitemLinearLayout1"
		android:layout_centerVertical="true"
		android:id="@+id/settingitemLinearLayout3"
		android:gravity="center_vertical">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/settingitemTextView1"
			android:gravity="center_vertical"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/settingitemTextView2"/>

	</LinearLayout>

	<ImageView
		android:layout_height="35dp"
		android:layout_width="35dp"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:id="@+id/settingitemImageView1"
		android:background="@drawable/ic_launcher"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_toLeftOf="@id/settingitemImageView1"
		android:id="@+id/settingitemLinearLayout2"
		android:layout_centerVertical="true"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_toLeftOf="@id/settingitemLinearLayout2"
		android:layout_centerVertical="true"
		android:id="@+id/settingitemTextView3"/>

</RelativeLayout>

